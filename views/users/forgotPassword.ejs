<% layout("layouts/boilerplate") -%>

<div class="col-md-6 m-auto">
  <div class="card card-body">
    <h1 class="text-center m-0">Forgot Password</h1>

    <form action="/users/forgotpassword" method="POST" class="validated-form" novalidate>
      <div class="form-group">
        <label for="email">E-Mail ID</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Enter E-Mail ID" required />
      </div>

      <button type="submit" class="btn btn-primary btn-block">Get Password Reset Link</button>
    </form>
  </div>
</div>
